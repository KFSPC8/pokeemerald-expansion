raw `
.set LOCALID_NURSE, 1

FortreeCity_PokemonCenter_1F_MapScripts::
	map_script MAP_SCRIPT_ON_TRANSITION, FortreeCity_PokemonCenter_1F_OnTransition
	map_script MAP_SCRIPT_ON_RESUME, CableClub_OnResume
	.byte 0

FortreeCity_PokemonCenter_1F_OnTransition:
	setrespawn HEAL_LOCATION_FORTREE_CITY
	end

FortreeCity_PokemonCenter_1F_EventScript_Nurse::
	setvar VAR_0x800B, LOCALID_NURSE
	call Common_EventScript_PkmnCenterNurse
	waitmessage
	waitbuttonpress
	release
	end

FortreeCity_PokemonCenter_1F_EventScript_Gentleman::
	msgbox FortreeCity_PokemonCenter_1F_Text_GoToSafariZone, MSGBOX_NPC
	end

FortreeCity_PokemonCenter_1F_EventScript_Man::
	msgbox FortreeCity_PokemonCenter_1F_Text_RecordCornerIsNeat, MSGBOX_NPC
	end

FortreeCity_PokemonCenter_1F_EventScript_Boy::
	msgbox FortreeCity_PokemonCenter_1F_Text_DoYouKnowAboutPokenav, MSGBOX_NPC
	end

FortreeCity_PokemonCenter_1F_Text_GoToSafariZone:
	.string "Listen, kid, are you working\n"
	.string "on a Pokédex?\p"
	.string "Hmm… Go to the SAFARI ZONE.\n"
	.string "That's my suggestion.$"

FortreeCity_PokemonCenter_1F_Text_RecordCornerIsNeat:
	.string "Have you done anything at\n"
	.string "the RECORD CORNER?\p"
	.string "It's pretty neat. It mixes and matches\n"
	.string "the records of TRAINERS.\p"
	.string "I don't know quite how it works,\n"
	.string "but it's cool. It's exciting, even!$"

FortreeCity_PokemonCenter_1F_Text_DoYouKnowAboutPokenav:
	.string "Oh, wow, you have a PokéNav!\n"
	.string "And it's just like mine!\p"
	.string "Do you know about PokéNav's\n"
	.string "MATCH CALL system?\p"
	.string "Access it, and you can chat with\n"
	.string "registered TRAINERS anytime.\p"
	.string "It also shows you which TRAINERS\n"
	.string "want a rematch with you.\p"
	.string "It's really nifty! Those DEVON guys\n"
	.string "sure know what they're doing!$"

`

script FortreeCity_PokemonCenter_1F_EventScript_EggMan {
	lock
	faceplayer
	msgbox(FortreeCity_PokemonCenter_1F_PseudoManIntro, MSGBOX_YESNO)

	if(var(VAR_RESULT) == NO)
	{
		goto(FortreeCity_PokemonCenter_1F_EventScript_PseudoEggManManNo)
	}

	checkitem(ITEM_YELLOW_SHARD)
	goto_if_eq(VAR_RESULT, FALSE, FortreeCity_PokemonCenter_1F_EventScript_ComeBackWithYellowShard)
	getpartysize
	goto_if_eq(VAR_RESULT, PARTY_SIZE, FortreeCity_PokemonCenter_1F_EventScript_NoRoomForEgg)
	msgbox(FortreeCity_PokemonCenter_1F_Text_HopeYoullWalkPlentyWithEgg, MSGBOX_DEFAULT)
	playfanfare(MUS_OBTAIN_ITEM)
	message(FortreeCity_PokemonCenter_1F_Text_ReceivedTheEgg)
	waitfanfare
	giveegg(SPECIES_DRATINI)
	removeitem(ITEM_YELLOW_SHARD)
	msgbox(FortreeCity_PokemonCenter_1F_ComeBackWithMore, MSGBOX_DEFAULT)
	release
	end
	
}

script FortreeCity_PokemonCenter_1F_EventScript_PseudoEggManManNo {
    msgbox(FortreeCity_PokemonCenter_1F_PseudoEggManDeclined, MSGBOX_DEFAULT)
    release
    end
}

script FortreeCity_PokemonCenter_1F_EventScript_ComeBackWithYellowShard {
	msgbox(FortreeCity_PokemonCenter_1F_Text_ComeBackWithYellowShard, MSGBOX_DEFAULT)
	release
	end
}

script FortreeCity_PokemonCenter_1F_EventScript_NoRoomForEgg {
	msgbox(FortreeCity_PokemonCenter_1F_Text_NoRoomForThisEgg, MSGBOX_DEFAULT)
	release
	end
}

text FortreeCity_PokemonCenter_1F_PseudoManIntro {
	"Hello, trainer. I have several rare Eggs\n"
	"here with me.\p"
	"I am currently seeking Yellow Shards,\n"
	"would you be willing to exchange a\l"
	"Yellow Shard in exchange for one of\l"
	"these Eggs?"
}

text FortreeCity_PokemonCenter_1F_PseudoEggManDeclined
{
	"I see. Please come back if you change\n"
	"your mind."
}

text FortreeCity_PokemonCenter_1F_Text_ComeBackWithYellowShard {
	"It doesn't look like you have a\n"
	"Yellow Shard. Come back when you do."
}

text FortreeCity_PokemonCenter_1F_Text_NoRoomForThisEgg {
	"Oh? You've too many Pokémon.\n"
	"There's no room for this Egg…"
}

text FortreeCity_PokemonCenter_1F_Text_HopeYoullWalkPlentyWithEgg {
	"Good! I hope you'll walk plenty with\n"
	"this here Egg!"
}

text FortreeCity_PokemonCenter_1F_Text_ReceivedTheEgg {
	"{PLAYER} received the Egg."
}

text FortreeCity_PokemonCenter_1F_ComeBackWithMore {
	"Please come back if you have more\n"
	"Yellow Shards you'd like to exchange."

}
