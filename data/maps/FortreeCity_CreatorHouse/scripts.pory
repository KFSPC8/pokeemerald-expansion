script FortreeCity_CreatorHouse_EventScript_Isaac{
	lockall
	applymovement(3, Common_Movement_FacePlayer)
	goto_if_set(FLAG_RECEIVED_WATER_MEGAS, FortreeCity_CreatorHouse_EventScript_IsaacDefeated)
	goto_if_set(FLAG_DECLINED_ISAAC_BATTLE, FortreeCity_CreatorHouse_EventScript_IsaacRequestBattleAgain)
	msgbox(Isaac_Greeting, MSGBOX_YESNO)
	goto(FortreeCity_CreatorHouse_EventScript_BattleIsaacPrompt)
	end
}

script FortreeCity_CreatorHouse_EventScript_IsaacRequestBattleAgain{
	msgbox(Ready_Yet, MSGBOX_YESNO)
	goto(FortreeCity_CreatorHouse_EventScript_BattleIsaacPrompt)
	end
}

script FortreeCity_CreatorHouse_EventScript_BattleIsaacPrompt{
	call_if_eq(VAR_RESULT, YES, FortreeCity_CreatorHouse_EventScript_BattleIsaac)
	goto_if_eq(VAR_RESULT, NO, FortreeCity_CreatorHouse_EventScript_DeclineIsaacBattle)
	closemessage
	end
}

script FortreeCity_CreatorHouse_EventScript_DeclineIsaacBattle {
	setflag(FLAG_DECLINED_ISAAC_BATTLE)
	msgbox(Come_Back_When_Ready, MSGBOX_DEFAULT)
	release
	end
}

script FortreeCity_CreatorHouse_EventScript_BattleIsaac{
	msgbox("Alright, let's do this.", MSGBOX_DEFAULT)
	trainerbattle_no_intro(TRAINER_ISAAC, Isaac_Outro)
	goto(FortreeCity_CreatorHouse_EventScript_IsaacGiveItems)
	return
}
	

script FortreeCity_CreatorHouse_EventScript_IsaacDefeated{
	msgbox(PostBattle_Isaac, MSGBOX_DEFAULT)
	releaseall
	end
}

script FortreeCity_CreatorHouse_EventScript_IsaacGiveItems{
	giveitem(ITEM_EMPOLEONITE_O)
	giveitem(ITEM_BLASTOISINITE)
	giveitem(ITEM_SWAMPERTITE)
	giveitem(ITEM_TM_SUBSTITUTE)
	giveitem(ITEM_CHOICE_SCARF)
	setflag(FLAG_RECEIVED_WATER_MEGAS)
	msgbox(Isaac_ExplainItems)
	release
	end
}

text Isaac_ExplainItems{
	"There you go, as promised. Now, keep\n"
	"moving forward! There are still plenty\p"
	"of tough battles ahead, but if you've\n"
	"made it this far, I believe you can beat\l"
	"the game.\p"
	"Thanks again for playing,\n"
	"good luck out there, {PLAYER}!"
}

text Isaac_Greeting{
	"Hi there, {PLAYER}, I am the creator of\n"
	"this hack.\l"
	"I hope you are enjoying it so far.\p"
	"Since you've made it to here, I would\n"
	"like to offer my sincere appreciation\l"
	"for playing this game.\p"
	"It was a lot of fun to make, and I\n"
	"hope I succeeded in making it very\l"
	"challenging, but not unbeatable.\p"
	"Now to business: I've got a team of my\n"
	"favorite Pok√©mon here and am ready to\l"
	"battle.\p"
	"If you win, I'll give you the Mega\n"
	"stones for the water starters,\l"
	"including Empoleon's 2nd Mega form.\p"
	"I'll also give you the TM for Substitute\n"
	"(broken move btw) and a Choice Scarf.\p"
	"If those rewards are worth it to you,\n"
	"then say the word and let's battle.\l"
	"What do you say?"
}
	
text Isaac_Outro{
	"Looks like you've got a pretty good\n"
	"team over there!"
}


text PostBattle_Isaac{
	"Can't believe I got beat in my own game,\n"
	"definitely gonna give myself a cracked\l"
	"team in the next version."
}




